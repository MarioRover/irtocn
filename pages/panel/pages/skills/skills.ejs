<div class="header w100 grid-x align-middle align-justify">
    <div class="title grid-y align-top">
        <h6>Dashboard</h6>
        <div class="sub-title grid-x align-middle">
            <a>Dashboard</a>
            <i class="fas fa-chevron-right"></i>
            <span>Pages</span>
            <i class="fas fa-chevron-right"></i>
            <span class="active">Skills</span>
        </div>
    </div>
</div>
<div class="body w100 grid-y">
    <div class="grid-x form-box w100">
            <table class="table w100">
                <thead>
                    <tr>
                    <th>#</th>
                    <th>Skill</th>
                    <th>Skill percentage</th>
                    <th>Date</th>
                    <th>Option</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(!isEmpty(skills)) {
                        let i = 0;
                        skills.forEach(skill => { i+=1 %>
                            <tr>
                                <th class="row"><%= i %></th>
                                <td><%= skill.skillEN %></td>
                                <td><%= skill.skillPercent %></td>
                                <td><%= date(skill.createdAt).format('YYYY MMM D') %></td>
                                <td>
                                    <div class="grid-x align-left">
                                        <a href="/admin/pages/skills/<%= skill._id %>" class="button" title="Edit"><i class="fas fa-pencil-alt"></i></a>
                                        <button title="Delete" class="deleteSkill" value="<%= skill._id %>"><i class="far fa-trash-alt"></i></button>
                                    </div>
                                </td>
                            </tr>
                        <% }) 
                    } %>
                </tbody>
            </table>


        <form class="AddSkill w100">
            <div class="form-head">
                <h6>Add Skill</h6>
            </div>
            <div class="error-box"></div>
            <div class="form-group grid-x align-justify">
                <div class="group">
                    <label for="skillEN">English Skill</label>
                    <input type="text" name="skillEN" placeholder="Enter Skill Name" value="">
                </div>
                <div class="group">
                    <label for="skillCN">China Skill</label>
                    <input type="text" name="skillCN" placeholder="输入技能名称" value="">
                </div>
            </div>
            <div class="form-group grid-x align-justify">
                <div class="group">
                    <label for="skillFA">Persian Skill</label>
                    <input class="input-fa" type="text" name="skillFA" placeholder="نام مهارت را وارد کنید" value="">
                </div>
                <div class="group">
                    <label for="skillPercent">Skill percentage</label>
                    <input type="number" name="skillPercent" placeholder="" value="">
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>
<script>
    const rowDelete = (objId) => {
        let row = $(`tr td button[value=${objId}]`).parents('tr');
        $(row).remove();
    }
</script>