<div class="header w100 grid-x align-middle align-justify">
    <div class="title grid-y align-top">
        <h6>Dashboard</h6>
        <div class="sub-title grid-x align-middle">
            <a>Dashboard</a>
            <i class="fas fa-chevron-right"></i>
            <span>Setting Website</span>
            <i class="fas fa-chevron-right"></i>
            <span class="active">SEO</span>
        </div>
    </div>
</div>
<div class="body w100 grid-y">
    <div class="grid-x form-box w100">

        <form class="HomeSEO w100">
            <div class="form-head">
                <h6>Home Tags</h6>
            </div>
            <div class="error-box"></div>
            <div class="lastupdate grid-x-no align-middle">
                <% if(homeSeo !== 'undefined') { %>
                    <div class="lastupdate grid-x-no align-middle">
                        <h6>Last Update : </h6>
                        <span><%= homeSeo.updatedBy.name %></span>
                        <span><%= date(homeSeo.updatedAt).format('YYYY MMM D') %></span>
                    </div>    
                <% } %>
            </div>    
            <div class="form-group grid-y">
                <label for="descTags">Description Tags</label>
                <input name="descTags" type="text" value="<%= homeSeo.descTags %>">
            </div>
            <div class="form-group grid-y">
                <label for="keyTags">Keywords Tags</label>
                <input name="keyTags" type="text" value="<%= homeSeo.keyTags %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
<script>
    $(".HomeSEO input[name='descTags']").tagify();
    $(".HomeSEO input[name='keyTags']").tagify();
</script>